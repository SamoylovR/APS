
@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-page="/Auth/Logout">
        Welcome @User.Identity.Name
        <button type="submit" class="ml-2 btn btn-link">Log Out</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Auth/Login">Log In</a>
}