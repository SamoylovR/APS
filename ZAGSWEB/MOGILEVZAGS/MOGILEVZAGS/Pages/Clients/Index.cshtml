@page
@model MOGILEVZAGS.Pages.Clients.IndexModel
@{
}

<br>
<h2>Предварительная запись на регистрацию брака прямо на веб-сайте.</h2>
<a class='btn btn-primary btn-sm' href='/Clients/Create'>Оформить запись</a>
<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>Телефон</th>
            <th>Дата создания заявки</th>
            <th>Тип заявки</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListClients)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.SecondName</td>
                <td>@item.Surname</td>
                <td>@item.Phone</td>
                <td>@item.CreatedAt</td>
                <th>@item.TypeOfOperation</th>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
